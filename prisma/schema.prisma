// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SocialNetwork {
  id   Int    @id
  name String
  Tuto Tuto[]
}

model CodeBeta {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  user      User?    @relation(fields: [idUser], references: [id])
  idUser    Int?     @unique
  createdAt DateTime @default(now())
}

model User {
  id               Int                @id @default(autoincrement())
  email            String             @unique
  lastName         String
  firstName        String
  password         String
  activate         Boolean            @default(false)
  codeActivate     Int?
  Board            Board[]
  RefreshTokenUser RefreshTokenUser[]
  ForgotPassword   ForgotPassword[]
  CodeBeta         CodeBeta?
  createdAt        DateTime           @default(now())
}

model ForgotPassword {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [idUser], references: [id])
  idUser     Int      @unique
  codeForgot Int
  createdAt  DateTime @default(now())
}

model RefreshTokenUser {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [idUser], references: [id])
  idUser       Int
  idDevice     String   @unique
  Notification String?  @unique
  refreshToken String
  updatedAt    DateTime @default(now()) @updatedAt
}

model Board {
  id        Int      @id @default(autoincrement())
  InBoard   Int?
  name      String
  user      User     @relation(fields: [idUser], references: [id])
  idUser    Int
  Tuto      Tuto[]
  createdAt DateTime @default(now())
}

model Tuto {
  id             Int           @id @default(autoincrement())
  title          String?
  SocialNetworks SocialNetwork @relation(fields: [idSocial], references: [id])
  idSocial       Int
  URL            String
  board          Board         @relation(fields: [idBoard], references: [id], onDelete: Cascade)
  idBoard        Int
  createdAt      DateTime      @default(now())
}
